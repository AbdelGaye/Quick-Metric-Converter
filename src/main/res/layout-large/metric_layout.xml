<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:src="@drawable/qmc_bar"
        android:contentDescription="@string/description"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/title"
        android:textSize="55sp"
        android:textColor="#114455"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/input"
        android:background="@drawable/textinput"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="450dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/output"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/textoutput"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:background="@drawable/convert_button"
        android:id="@+id/bconvert"
        android:layout_below="@+id/input"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="7dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:maxWidth="78dip"
        android:id="@+id/unitin"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/input"
        android:layout_toRightOf="@+id/input"
        android:layout_toEndOf="@+id/input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:maxWidth="78dip"
        android:id="@+id/unitout"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/output"
        android:layout_toRightOf="@+id/output"
        android:layout_toEndOf="@+id/output" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/swap"
        android:background="@drawable/swapbutton"
        android:contentDescription="@string/description"
        android:layout_alignBottom="@+id/bconvert"
        android:layout_toRightOf="@+id/input"
        android:layout_toEndOf="@+id/input" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/spin"
        android:layout_above="@+id/bconvert"
        android:background="@drawable/holder"
        android:layout_marginLeft="550dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/spout"
        android:background="@drawable/holder"
        android:layout_alignTop="@+id/output"
        android:layout_alignLeft="@+id/spin"
        android:layout_alignStart="@+id/spin" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="@string/menu"
        android:textColor="#FFFFFF"
        android:id="@+id/menu"
        android:background="@drawable/menu_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>